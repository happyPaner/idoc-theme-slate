@import('_partial/reset.styl');
// CSS reset
global-reset()
reset-html5()

@import('_partial/variables.styl');
@import('_partial/markdown.styl');
@import('_partial/highlight.styl');

*
    box-sizing: border-box
body 
    background:#F6F6F6 url(../img/background.png)
body,html
    height:100%
    font-family: arial, nimbussansl, liberationsans, freesans, clean, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"
.logo
    float left
    padding: 0 20px 0 0
    font-size: 24px
    color: #35495e
    font-family: "微软雅黑", Helvetica, arial, nimbussansl
    font-weight: bold
    img 
        vertical-align: middle
        margin: -4px 0 0 0

.nav-content
    position: fixed
    width: 100%
    border-bottom: 1px solid #ddd
    height: 71px
    background:#F6F6F6 url(../img/background.png)
    z-index: 100
.nav
    line-height: 70px
    position: relative
    width: 90%
    margin: 0 auto
    @media mq-mobile
        height initial
        position: initial
    a
        text-decoration: none
        color: inherit
    a:link 
        text-decoration: none
        color: inherit
    ul  
        list-style: none
        position: relative
        display: inline-table
        float: right
        @media mq-mobile
            display inline-flex
        ul
            display: none
            background: #D1D1D1
            border-radius: 0px
            padding: 0
            position: absolute
            top: 100%
            z-index 9
            li.active
                a
                    background: #4b545f
                    color:#fff
                    line-height:29px
                    height:29px
                    
            li 
                float: none
                border-bottom: 1px solid #C8C8C8
                position: relative
                a:hover 
                    background: #4b545f
                    color:#fff
            a
                color: #fff
                line-height: 29px
                white-space:nowrap
                word-break:keep-all
            ul
                position: absolute
                left: 100%
                top:0
        li
            float: left
            padding-top: 15px
            padding-bottom: 15px
            line-height: 40px
            a
                display: block
                color: #757575
                font-size: 18px
                text-decoration: none
                margin: 0 20px
        li:hover
            a
                color: #333
                border-bottom: 2px solid #333
        li.active
            a
                color:#41b883
                height: 40px
                border-bottom: 2px solid #41b883

    ul li:hover > ul
        display: block
    ul:after
        content: ""
        clear: both
        display: block
.warpper
    width: 90%
    padding: 71px 0 30px 0
    height: 100%
    margin: 0 auto
    position: relative
    @media mq-mobile
        padding-top 0

    .markdown-body
        margin-left:tocwidth
        @media mq-mobile
            margin-left:0
    .page-toc
        height:calc(100% - 71px)
        position: fixed
        width:tocwidth
        // background:#F6F6F6 url(../img/background.png)
        padding: 10px 0px
        border-right: 1px solid #ddd
        overflow-y: auto
        overflow-x: hidden
        font-family:  Arial, sans-serif !important;
        text-align: right
        z-index: 1000
        @media mq-mobile
            display none
        ul
            list-style-type: none
            a 
                display: block
                padding: 10px 0 4px 0
                color: #000
                font-family: "微软雅黑"
                text-decoration: none
                font-weight:bold
                line-height: 22px
                font-size: 18px
                cursor: pointer
                &:hover
                    color:#ff6600
                    text-decoration: underline
            li 
                padding-left:3px
                text-align:left
                list-style-type: none
            ul
                border-right: none
                list-style-type: square
                padding:0px
                line-height: 14px
                li 
                    a 
                        padding: 3px 0
                        font-size:90%
                        font-family: Helvetica, arial, nimbussansl, liberationsans, freesans, clean, sans-serif
                        border-bottom:0
                        font-size: 16px
                        color: #41b883
                    ul
                        padding-left: 10px
                        li
                            a
                                padding: 1px 0
                                font-size: 14px
                                color: #222
                                font-weight: normal
                             ul
                                // display: none
                                li
                                    a
                                        color: #777
                                        font-size: 13px

    .copyright
        border-top: 1px dashed #E9E9E9
        padding: 6px 0 5px 2px
        margin: 32px 0 0 0
        line-height: 16px
        font-size: 12px
        color: #dfdfdf
        a 
            color: #D6DDF8
            text-decoration: underline
            &:hover
                color:#333

.forkgithub
    position: absolute
    z-index: 2
    right: 0
    background:url("../img/forkgithub.png") 14px -15px no-repeat
    @media mq-mobile
        display none
    a 
        display:block
        width:149px
        height:149px
        